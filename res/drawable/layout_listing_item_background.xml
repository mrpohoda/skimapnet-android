<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">	
	<item android:state_selected="true" android:drawable="@color/layout_listing_item_background_pressed" />
	<item android:state_checked="true" android:drawable="@color/layout_listing_item_background_pressed" />
	<item android:state_focused="true" android:state_pressed="false" android:drawable="@color/layout_listing_item_background_focused" /> <!-- focused -->
	<item android:state_focused="true" android:state_pressed="true" android:drawable="@color/layout_listing_item_background_pressed" /> <!-- focused pressed -->
	<item android:state_focused="false" android:state_pressed="true" android:drawable="@color/layout_listing_item_background_pressed" /> <!-- pressed -->
	<item android:drawable="@color/layout_listing_item_background" />
</selector>
